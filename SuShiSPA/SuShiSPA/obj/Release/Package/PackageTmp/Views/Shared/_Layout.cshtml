<!DOCTYPE html>
<html >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="This Kendo UI demo shows a sample shopping cart system and how you can easily build SPAs with Kendo UI framework." name="description">
    <link rel="shortcut icon" type="image/ico" href="~/Images/Icon/sushi.png">
    <title>SUSHI</title>   
    @Styles.Render("~/bundles/sushicss")
    <style>
        .k-fx-tileleft.k-fx-end .k-fx-next #details,
        .k-fx-tileleft.k-fx-end .k-fx-current #details,
        .k-fx-tileright.k-fx-end .k-fx-next #details,
        .k-fx-tileright.k-fx-end .k-fx-current #details {
            -webkit-transition: all 350ms ease-out;
            -moz-transition: all 350ms ease-out;
            transition: all 350ms ease-out;
        }

        .k-fx-tileleft.k-fx-start .k-fx-next #details {
            -webkit-transform: translatex(100%);
            -moz-transform: translatex(100%);
            transform: translatex(100%);
        }

        .k-fx-tileleft.k-fx-end .k-fx-current #details {
            -webkit-transform: translatex(-100%);
            -moz-transform: translatex(-100%);
            transform: translatex(-100%);
        }


        /* right */
        .k-fx-tileright.k-fx-start .k-fx-next #details {
            -webkit-transform: translatex(-100%);
            -moz-transform: translatex(-100%);
            transform: translatex(-100%);
        }

        .k-fx-tileright.k-fx-end .k-fx-current #details {
            -webkit-transform: translatex(100%);
            -moz-transform: translatex(100%);
            transform: translatex(100%);
        }
    </style>
</head>
<body ng-app="sushiApp">
    <div id="application">
        <div>
            <div id="wrapper">
                @RenderBody()             
                <div id="footer">
                    <p>Learn more about Kendo UI<sup>�</sup> SPA at <a href="http://docs.telerik.com/kendo-ui/getting-started/framework/spa/overview">docs.telerik.com/kendo-ui</a>.</p>

                    <p>Copyright � 2016, Progress Software Corporation and/or its subsidiaries or affiliates. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sushijs")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
